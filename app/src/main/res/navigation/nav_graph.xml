<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homepageFragment">

    <fragment
        android:id="@+id/homepageFragment"
        android:name="id.co.secondhand.ui.market.homepage.HomepageFragment"
        android:label="fragment_homepage"
        tools:layout="@layout/fragment_homepage" >
        <action
            android:id="@+id/action_homepageFragment_to_detailProductFragment"
            app:destination="@id/detailProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/sellerNotificationFragment"
        android:name="id.co.secondhand.ui.market.notification.seller.SellerNotificationFragment"
        android:label="fragment_seller_notification"
        tools:layout="@layout/fragment_seller_notification" />
    <fragment
        android:id="@+id/addProductFragment"
        android:name="id.co.secondhand.ui.market.product.add.AddProductFragment"
        android:label="fragment_add_product"
        tools:layout="@layout/fragment_add_product" />
    <fragment
        android:id="@+id/productFragment"
        android:name="id.co.secondhand.ui.market.product.ProductFragment"
        android:label="fragment_product"
        tools:layout="@layout/fragment_product" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="id.co.secondhand.ui.market.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_updateProfileFragment"
            app:destination="@id/updateProfileFragment" />
    </fragment>
    <dialog
        android:id="@+id/detailProductFragment"
        android:name="id.co.secondhand.ui.market.product.detail.DetailProductFragment"
        android:label="fragment_detail_product"
        tools:layout="@layout/fragment_detail_product" >
        <argument
            android:name="productId"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_detailProductFragment_to_negotiateFragment"
            app:destination="@id/negotiateFragment" />
    </dialog>
    <fragment
        android:id="@+id/updateProfileFragment"
        android:name="id.co.secondhand.ui.market.profile.update.UpdateProfileFragment"
        android:label="fragment_update_profile"
        tools:layout="@layout/fragment_update_profile" />
    <dialog
        android:id="@+id/negotiateFragment"
        android:name="id.co.secondhand.ui.market.product.detail.NegotiateFragment"
        android:label="NegotiateFragment" />
</navigation>