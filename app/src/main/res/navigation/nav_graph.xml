<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homepageFragment">

    <fragment
        android:id="@+id/homepageFragment"
        android:name="id.co.secondhand.ui.market.homepage.HomepageFragment"
        android:label="fragment_homepage"
        tools:layout="@layout/fragment_homepage" >
        <action
            android:id="@+id/action_homepageFragment_to_sellerNotificationFragment"
            app:destination="@id/sellerNotificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/sellerNotificationFragment"
        android:name="id.co.secondhand.ui.market.notification.seller.SellerNotificationFragment"
        android:label="fragment_seller_notification"
        tools:layout="@layout/fragment_seller_notification" >
        <action
            android:id="@+id/action_sellerNotificationFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="id.co.secondhand.ui.market.product.add.AddProductFragment"
        android:label="fragment_add_product"
        tools:layout="@layout/fragment_add_product" />
    <fragment
        android:id="@+id/productFragment"
        android:name="id.co.secondhand.ui.market.product.salelist.SaleListFragment"
        android:label="fragment_product"
        tools:layout="@layout/fragment_sale_list" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="id.co.secondhand.ui.market.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>