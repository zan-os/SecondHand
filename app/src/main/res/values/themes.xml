<resources>
    <!-- Base application theme. -->
    <style name="Theme.SecondHand" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_04</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/dark_blue_04</item>
        <item name="snackbarTextViewStyle">@style/Snackbar</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.SecondHand</item>
    </style>

    <!-- Text -->

    <style name="TextAppearance.SecondHand.Heading.Bold" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">700</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.SecondHand.Heading.Medium" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.SecondHand.Heading.Regular" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="TextAppearance.SecondHand.Title.Bold" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="TextAppearance.SecondHand.Title.Medium" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.SecondHand.Title.Regular" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="TextAppearance.SecondHand.Body.Bold" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">700</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.SecondHand.Body.Medium" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.SecondHand.Body.Regular" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.SecondHand.Body.Regular.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Widget.MaterialComponents.Button.CircleButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconTint">@color/neutral_05</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Button">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputLayout.DropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="hintEnabled">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText.MultiLine">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">3</item>
        <item name="android:gravity">top</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="AutoCompleteTextView">
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.RoundedCardView">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/neutral_03</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <!-- Snackbar -->
    <style name="Snackbar" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

</resources>