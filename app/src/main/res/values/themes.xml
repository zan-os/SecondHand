<resources>
    <!-- Base application theme. -->
    <style name="Theme.SecondHand" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_04</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.SecondHand.Heading.Bold" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="TextAppearance.SecondHand.Heading.Medium" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextAppearance.SecondHand.Heading.Regular" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="TextAppearance.SecondHand.Title.Bold" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="TextAppearance.SecondHand.Title.Medium" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextAppearance.SecondHand.Title.Regular" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="TextAppearance.SecondHand.Body.Bold" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="TextAppearance.SecondHand.Body.Medium" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextAppearance.SecondHand.Body.Regular" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Widget.MaterialComponents.Button.CircleButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconTint">@color/neutral_05</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Button">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.RoundedCardView">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/neutral_03</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

</resources>